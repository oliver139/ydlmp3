{
  "name": "ydlmp3",
  "type": "module",
  "version": "1.0.2",
  "description": "A cli tool using yt-dlp to download and clip videos, then convert to mp3",
  "author": "Oliver Mak <oliver139.working@gmail.com> (https://github.com/oliver139)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oliver139/ydlmp3"
  },
  "keywords": [
    "youtube",
    "twitter",
    "yt-dlp",
    "ffmpeg"
  ],
  "main": "./bin/index.cjs",
  "bin": "./bin/index.cjs",
  "files": [
    "bin"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "prepare": "npx simple-git-hooks",
    "build": "rollup --config=rollup.config.ts --configPlugin rollup-plugin-esbuild",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "lint:inspect": "eslint --inspect-config",
    "start": "tsx src/index.ts",
    "release": "bumpp && pnpm publish"
  },
  "dependencies": {
    "command-exists": "^1.2.9",
    "yargs": "^17.7.2",
    "yt-dlp-wrap": "^2.3.12"
  },
  "devDependencies": {
    "@antfu/ni": "^24.2.0",
    "@oliver139/eslint-config": "^2.1.0",
    "@tsconfig/recommended": "1.0.8",
    "@types/command-exists": "^1.2.3",
    "@types/node": "^22.13.10",
    "@types/yargs": "^17.0.33",
    "bumpp": "^10.1.0",
    "eslint": "^9.22.0",
    "lint-staged": "^15.5.0",
    "rollup": "^4.36.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-esbuild": "^6.2.1",
    "simple-git-hooks": "^2.11.1",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.8.1",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
